#!/bin/bash

## Description: Installs FWS Manatee.

ddev composer install
ddev drush site:install minimal --verbose -y --site-name="FWS: Captive Manatee Database" --account-name=admin --account-pass=admin
ddev drush recipe ../recipes/fws-core
ddev drush scr ../scripts/install-cleanup.php
ddev drush cr

ddev drush recipe ../recipes/fws-manatee-taxonomy
ddev drush recipe ../recipes/fws-manatee-node
ddev drush recipe ../recipes/fws-tracking-reports
# ddev drush recipe ../recipes/fws-manatee-user
# ddev drush recipe ../recipes/fws-manatee-content

# ddev drush webform-libraries-download

ddev drush uli
