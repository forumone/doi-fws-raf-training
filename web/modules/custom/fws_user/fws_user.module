<?php

/**
 * @file
 * Primary module hooks for FWS User module.
 */

use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Entity\Display\EntityViewDisplayInterface;
use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_ENTITY_TYPE_view_alter().
 */
function fws_user_user_view_alter(array &$build, EntityInterface $entity, EntityViewDisplayInterface $display) {
  // Replace username with email in user profile display.
  if (isset($build['username'])) {
    $build['username'][0]['#markup'] = $entity->getEmail();
  }
}

/**
 * Implements hook_form_FORM_ID_alter().
 */
function fws_user_form_user_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  // Hide the username field in the user edit form.
  if (isset($form['account']['name'])) {
    $form['account']['name']['#access'] = FALSE;
  }
}

/**
 * Implements hook_user_format_name_alter().
 */
function fws_user_user_format_name_alter(&$name, $account) {
  // Replace username with email everywhere it's displayed.
  if ($account->getEmail()) {
    $name = $account->getEmail();
  }
}
