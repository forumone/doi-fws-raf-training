{#
/**
 * @file
 * Custom theme implementation for print HTML document.
 *
 * Variables:
 * - html_attributes: HTML attributes for the html element.
 * - head_title: A rendered title tag for the page.
 * - head_title_array: Array of title components.
 * - head: Markup for the HEAD section (including meta tags, etc.)
 * - styles: Style tags necessary to import all CSS files for the page.
 * - scripts: Script tags necessary to load the JavaScript files and settings
 *   for the page.
 * - page_top: Initial markup from any modules that have altered the page.
 * - page: The rendered page content.
 * - page_bottom: Closing markup from any modules that have altered the page.
 * - db_offline: A flag indicating if the database is offline.
 *
 * @see template_preprocess_html()
 */
#}
{%
  set body_classes = [
    'node-page',
    'node-view-mode-print',
    'print-page',
    'print-template',
    logged_in ? 'user-logged-in',
    not root_path ? 'path-frontpage' : 'path-' ~ root_path|clean_class,
    node_type ? 'page-node-type-' ~ node_type|clean_class,
    db_offline ? 'db-offline',
  ]
%}
<!DOCTYPE html>
<html{{ html_attributes }}>
  <head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title|safe_join(' | ') }}</title>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
  </head>
  <body{{ attributes.addClass(body_classes) }}>
    {#
      Keyboard navigation/accessibility link to main content section in
      page.html.twig.
    #}
    <a href="#main-content" class="visually-hidden focusable skip-link">
      {{ 'Skip to main content'|t }}
    </a>
    {{ page_top }}
    {{ page }}
    {{ page_bottom }}
    <js-bottom-placeholder token="{{ placeholder_token }}">
  </body>
</html>
