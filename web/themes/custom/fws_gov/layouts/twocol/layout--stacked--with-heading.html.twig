{#
/**
 * @file
 * Default theme implementation to display a two-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{# this is used in the side by side columns if present #}
{% set columns_classes = 'layout-stacked-side-by-side layout layout--twocol-section layout--twocol-section--' ~ settings.column_widths %}

{% if content %}
  <div{{ attributes }}>
    {# has_content is set in the build() of the class file #} 
    {% if (settings.heading is not empty) and (content['#has_content']) %}
      {% if settings.heading_size == 'h4' %}
        <h4>{{settings.heading}} </h4>
      {% elseif settings.heading_size == 'h3' %}
        <h3>{{settings.heading}} </h3>
      {% else %}
        <h2>{{settings.heading}} </h2>
      {% endif %}
    {% endif %}
    {% if content.top %}
      <div {{ region_attributes.top.addClass('layout__region', 'layout__region--top') }}>
        {{ content.top }}
      </div>
    {% endif %}


    {% if content.left or content.right %}
        <div class="{{columns_classes}}">
            {% if content.left %}
            <div {{ region_attributes.left.addClass('layout__region', 'layout__region--first') }}>
                {{ content.left }}
            </div>
            {% endif %}

            {% if content.right %}
            <div {{ region_attributes.right.addClass('layout__region', 'layout__region--second') }}>
                {{ content.right }}
            </div>
            {% endif %}
        </div>
    {% endif %}

    {% if content.bottom %}
      <div {{ region_attributes.bottom.addClass('layout__region', 'layout__region--bottom') }}>
        {{ content.bottom }}
      </div>
    {% endif %}

  </div>
{% endif %}