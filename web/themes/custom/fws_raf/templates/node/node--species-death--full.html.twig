{#
/**
 * @file
 * Theme override to display Mortality Record information using Bootstrap 3 classes.
 */
#}

{%
  set classes = [
    'mortality-record',
    node.bundle|clean_class,
    node.isPromoted() ? 'is-promoted',
    node.isSticky() ? 'is-sticky',
    not node.isPublished() ? 'is-unpublished',
    view_mode ? view_mode|clean_class,
    'clearfix',
  ]
%}

<article{{ attributes.addClass(classes) }}>
  <div class="container-fluid">
    <div style="margin-bottom: 22px;">{{ content.field_species_ref }}</div>

    <!-- Primary Information Section -->
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Death Information</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <th class="col-md-3">Death Date</th>
                <td class="col-md-9">{{ content.field_death_date|default('N/A') }}</td>
              </tr>
              <tr>
                <th>Death Occurred?</th>
                <td>{{ node.field_death_location is not empty ? node.field_death_location.entity.field_death_location.value : 'N/A' }}</td>
              </tr>
              <tr>
                <th>Euthanized?</th>
                <td>{{ node.field_euthanasia ? 'Yes' : 'No' }}</td>
              </tr>
              <tr>
                <th>Death Cause</th>
                <td>{{ node.field_cause_id is not empty ? node.field_cause_id.entity.field_death_cause.value : 'N/A' }}</td>
              </tr>
              <tr>
                <th>Other Human-Related</th>
                <td>{{ content.field_other_text|default('N/A') }}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Care Provider Information Section -->
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Other Death Information</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <th class="col-md-3">Organization</th>
                <td class="col-md-9">{{ node.field_org is not empty ? node.field_org.entity.field_organization.value : 'N/A' }}</td>
              </tr>
              <tr>
                <th>Veterinarian</th>
                <td>
                  {{ node.field_veterinarian.entity.field_first_name.value is not empty ? node.field_veterinarian.entity.field_first_name.value ~ ' ' ~ node.field_veterinarian.entity.field_last_name.value : content.field_veterinarian|default('N/A') }}
                </td>
              </tr>
              <tr>
                <th class="col-md-3">Additional Narrative</th>
                <td class="col-md-9">{{ content.field_comments|default('N/A') }}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Additional Information Section -->
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Report Information</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <th class="col-md-3">Created Date</th>
                <td class="col-md-9">{{ node.getCreatedTime()|date('m/d/Y') }}</td>
              </tr>
              <tr>
                <th>Created By</th>
                <td>
                  {% if node.getOwner().field_first_name.value is not empty %}
                    {{ node.getOwner().field_first_name.value }} {{ node.getOwner().field_last_name.value }}
                  {% else %}
                    {{ node.getOwner().getDisplayName() }}
                  {% endif %}
                </td>
                </tr>
              </tr>
              <tr>
                <th>Last Updated</th>
                <td>{{ node.getChangedTime()|date('m/d/Y') }}</td>
              </tr>
              <tr>
                <th>Updated By</th>
                <td>{{ node.getRevisionUser().getDisplayName() }}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</article>